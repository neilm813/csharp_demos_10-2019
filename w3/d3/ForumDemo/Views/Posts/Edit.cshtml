@model Post

<h2 class="text-center">
  Edit Post Id# @Model.PostId
</h2>

<form asp-controller="Posts" asp-action="Update" asp-route-id="@Model.PostId">
<!-- <form action="/posts/update/@Model.PostId"> -->

  <div class="form-group">
    <b><label asp-for="Topic"></label></b>
    <span class="text-danger font-weight-bold" asp-validation-for="Topic"></span>
    <input class="form-control" asp-for="Topic">
  </div>
  
  <div class="form-group">
    <b><label asp-for="Content"></label></b>
    <span class="text-danger font-weight-bold" asp-validation-for="Content"></span>
    <textarea class="form-control" asp-for="Content"></textarea>
  </div>
  
  <button class="btn btn-info" type="submit">Save</button>
  <a class="btn btn-danger" asp-controller="Posts" asp-action="All">Cancel</a>
</form>