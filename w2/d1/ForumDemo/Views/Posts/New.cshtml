@model Post

<h1>Post Something</h1>

<form asp-controller="Posts" asp-action="Create">

  <div class="form-group">
    <label asp-for="Username">
      Username
    </label>
    <span class="text-danger font-weight-bold" asp-validation-for="Username"></span>
    <input class="form-control" asp-for="Username">
  </div>

  <div class="form-group">
    <label asp-for="Topic">
      Topic
    </label>
    <span class="text-danger font-weight-bold" asp-validation-for="Topic"></span>
    <input class="form-control" asp-for="Topic">
  </div>

  <div class="form-group">
    <label asp-for="Content">
      Content
    </label>
    <span class="text-danger font-weight-bold" asp-validation-for="Content"></span>
    <input class="form-control" asp-for="Content">
  </div>
  <button class="btn btn-info" type="submit">Submit</button>

</form>